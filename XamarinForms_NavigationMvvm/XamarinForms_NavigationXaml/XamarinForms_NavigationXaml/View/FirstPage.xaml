<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="XamarinForms_NavigationXaml.View.FirstPage"
             Title="First page"
             Padding="5,10">
	<StackLayout>
		<Entry 
			Text="{Binding Name}"
			Keyboard="Text"
			Placeholder="Input your name." />
		<Entry
			Text="{Binding Age, StringFormat='{0}'}"
			Keyboard="Numeric"
			Placeholder="Input your age." />
    <Button Clicked="OnClicked" Text="Push me" HorizontalOptions="Fill" />
	</StackLayout>
</ContentPage>
